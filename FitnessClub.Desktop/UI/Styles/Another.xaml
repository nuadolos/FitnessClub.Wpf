<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BasicBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="AdditionalBackground" Color="#CEFFF9" />
    <SolidColorBrush x:Key="AttentionBackground" Color="#00CC76" />

    <Style TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Width" Value="175" />
        <Setter Property="Height" Value="30" />
        <Setter Property="BorderBrush" Value="{StaticResource AdditionalBackground}" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Background" Value="{StaticResource AttentionBackground}" />
        <Setter Property="Foreground" Value="{StaticResource BasicBackground}" />
    </Style>

    <Style x:Key="ProductCardBorder" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="BorderBrush" Value="{StaticResource AttentionBackground}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>
</ResourceDictionary>